@inherits LayoutComponentBase

<SpaceNavigateThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MediaQueryList>
    <MudLayout>
        <MudMainContent Class="page">
            <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
                <div class="page-img-background">
                    <div class="img-background" />
                </div>
                @Body
                <Footer />
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</MediaQueryList>


<svg class="svg">
    <clipPath id="my-clip-path" clipPathUnits="objectBoundingBox">
        <path d="M0.001,0 C0.689,0.135,0.165,0.883,0.798,1 H1 L1,0 H0.001" />
    </clipPath>
</svg>
<style>
    .page {
        background-image: linear-gradient(to bottom, #0e0e0e, #1c1c1c 60%, #192c43);
        position: fixed;
        overflow: hidden;
        padding: 150px 300px !important;
        width:100%;
        height: 100%;
        padding: 0;
        margin: 0;
        top: 0;
        left: 0;
    }

    .page-img-background {
        background-image: linear-gradient(180deg, #4BA3F3 0%, #7F1BFF 100%);
        -webkit-clip-path: url(#my-clip-path);
        clip-path: url(#my-clip-path);
        height: 100%;
        position: absolute;
        width: 40%;
        right: 0;
        top: 0;
    }

    .img-background {
        background-image: url('/Images/background-img.png');
        background-repeat: no-repeat;
        background-size: cover;
        height: 100%;
        position: absolute;
        width: 100%;
        opacity: 0.85;
    }

    .svg {
        height: 0px;
        padding: 0;
        margin: 0;
    }
</style>

